[Unit]
Description=Sysrepo plugin daemon
After=local-fs.target

[Service]
Type=notify
ExecStartPre=/bin/bash -c 'NP2_MODULE_DIR="/usr/share/yang/modules/netopeer2" \
			   LN2_MODULE_DIR="/usr/share/yang/modules/libnetconf2" \
			   NP2_MODULE_PERMS="600" NP2_MODULE_OWNER="root" \
			   NP2_MODULE_GROUP="root" \
			   exec /usr/share/netopeer2/scripts/setup.sh'
ExecStartPre=/bin/bash /etc/sysrepo-tsn/install-tsn-yang.sh
ExecStartPre=/bin/bash /usr/share/netopeer2/scripts/merge_hostkey.sh
ExecStartPre=/bin/bash /usr/share/netopeer2/scripts/merge_config.sh
ExecStart=/usr/bin/sysrepo-plugind -d -v2
Restart=always
SystemCallArchitectures=native
KillMode=control-group

[Install]
WantedBy=multi-user.target
