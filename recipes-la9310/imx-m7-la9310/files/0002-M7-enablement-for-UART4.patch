diff --git a/clock_config.c b/clock_config.c
index 9ccbb85..7256b17 100644
--- a/clock_config.c
+++ b/clock_config.c
@@ -102,8 +102,8 @@ void BOARD_BootClockRUN(void)
     CLOCK_SetRootDivider(kCLOCK_RootAudioAhb, 1U, 2U);                    /* Set root clock freq to 800MHZ/ 2= 400MHZ*/
